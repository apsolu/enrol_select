{{!
    @template enrol_select/administration_colleges

    Template Moodle pour afficher la page d'administration des populations.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * wwwroot
    * colleges
        * id
        * name
        * rolename
        * maxwish
        * minregister
        * maxregister
        * members
    * count_colleges
    * unusedcohorts

    Example context (json):
    {
        "wwwroot": "",
        "colleges": [],
        "count_colleges": 0,
        "unusedcohorts" : ""
    }
}}

<p class="text-end"><a href="{{ wwwroot }}/enrol/select/administration.php?tab=colleges&action=edit&id=0" class="btn btn-primary">Cr√©er une nouvelle population</a></p>

{{{ unusedcohorts }}}

{{#count_colleges}}
<table class="table table-striped">
    <tr>
        <th>Nom de la population</th>
        <th>{{#str}}roles{{/str}}</th>
        <th>{{#str}}maximum_wishes, enrol_select{{/str}}</th>
        <th>{{#str}}minimum_enrolments, enrol_select{{/str}}</th>
        <th>{{#str}}maximum_enrolments, enrol_select{{/str}}</th>
        <th>{{#str}}cohorts, cohort{{/str}}</th>
        <th>{{#str}}actions{{/str}}</th>
    </tr>
    {{#colleges}}
    <tr>
        <td>{{ name }}</td>
        <td>{{ rolename }}</td>
        <td>{{ maxwish }}</td>
        <td>{{ minregister }}</td>
        <td>{{ maxregister }}</td>
        <td>{{{ members }}}</td>
        <td>
			<ul class="list-inline">
				<li class="list-inline-item"><a href="{{wwwroot}}/enrol/select/administration.php?tab=colleges&action=edit&id={{id}}">{{#pix}}t/edit,core,{{#str}}edit{{/str}}{{/pix}}</a></li>
				<li class="list-inline-item"><a href="{{wwwroot}}/enrol/select/administration.php?tab=colleges&action=delete&id={{id}}">{{#pix}}t/delete,core,{{#str}}delete{{/str}}{{/pix}}</a></li>
			</ul>
        </td>
    </tr>
    {{/colleges}}
</table>
{{/count_colleges}}
