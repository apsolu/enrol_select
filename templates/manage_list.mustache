<div aria-labelledby="enrol-{{id}}-list-{{status}}" class="apsolu-manage-users-content-div fade tab-pane" id="enrol-{{id}}-list-{{status}}" role="tabpanel">
	<ul class="list list-inline text-right apsolu-manage-export-ul">
		<li class="list-inline-item"><a class="btn btn-primary" href="{{wwwroot}}/enrol/select/export.php?enrolid={{enrolid}}&status={{status}}&format=xls">{{#str}}xls_export, enrol_select{{/str}}</a></li>
	</ul>

	<div class="alert alert-info">{{description}}</div>

	{{^users}}<p class="alert alert-warning text-center">{{#str}}no_users, enrol_select{{/str}}</p>{{/users}}

	{{#count_users}}
	<form action="{{form_action}}" method="post" id="participantsform">
		<table class="table table-striped table-sortable">
			<thead>
				<tr>
					<th>{{#str}}select, enrol_select{{/str}}
					{{^lock}}
						<br />(<button type="button" class="btn btn-link checkall">{{#str}}all{{/str}}</button> / <button type="button" class="btn btn-link uncheckall">{{#str}}none{{/str}}</button>)
					{{/lock}}
					</th>
					<th>{{#str}}pictureofuser{{/str}}</th>
					<th>{{#str}}lastname{{/str}}</th>
					<th>{{#str}}firstname{{/str}}</th>
					<th>{{#str}}register_type, enrol_select{{/str}}</th>
					<th>{{#str}}institution{{/str}}</th>
					<th>{{#str}}fields_apsolucycle, local_apsolu{{/str}}</th>
					<th>{{#str}}department{{/str}}</th>
					<th>{{#str}}all_registers, enrol_select{{/str}}</th>
					<th>{{#str}}register_date, enrol_select{{/str}}</th>
				</tr>
			</thead>
			<tbody>
				{{#users}}
				<tr>
					<td>
					{{^lock}}
						<input type="checkbox" class="apsolu-select-manage-users-input-checkbox" name="users[]" value="{{id}}" />
					{{/lock}}
					</td>
					<td>{{{picture}}}</td>
					<td>{{lastname}}</td>
					<td>{{firstname}}</td>
					<td>{{role}}</td>
					<td>{{institution}}</td>
					<td>{{apsolucycle}}</td>
					<td>{{department}}</td>
					<td class="{{count_enrolments}}">
						{{#count_enrolments}}
						<ul class="list-unstyled">
							{{#enrolments}}
							<li><abbr title="{{fullname}}">{{sport}}</abbr>{{#course_url}} <a href="{{course_url}}">{{#pix}}i/course, core, {{#str}}course{{/str}}{{/pix}}</a>{{/course_url}} ({{enrolname}}/{{state}}/{{role}})</li>
							{{/enrolments}}
						</ul>
						{{/count_enrolments}}
					</td>
					<td><span title="{{timecreated}}">{{timecreated_sortable}}</span></td>
				</tr>
				{{/users}}
			</tbody>
		</table>

		{{^lock}}
		<p>{{{actions}}}</p>
		{{/lock}}
	</form>
	{{/count_users}}
</div>
